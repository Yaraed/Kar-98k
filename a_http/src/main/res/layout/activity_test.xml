<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".TestActivity">


    <com.weyee.poswidget.textview.AutoMoveTextView android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:singleLine="true"
                                                   android:layout_marginTop="10dp"
                                                   android:text="@string/appbar_scrolling_view_behavior"/>

    <com.weyee.poswidget.textview.ExpandableTextView android:layout_width="match_parent"
                                                     android:layout_height="wrap_content"
                                                     android:layout_marginTop="10dp"
                                                     app:etv_maxCollapsedLines="3">
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:id="@+id/expandable_text"
                  android:text="@string/more_text"/>
        <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:id="@+id/expandable_collapse"/>
    </com.weyee.poswidget.textview.ExpandableTextView>

</LinearLayout>