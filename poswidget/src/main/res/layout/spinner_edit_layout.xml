<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <EditText
        android:id="@+id/edit_spinner_edit"
        android:layout_width="match_parent"
        android:textSize="?attr/config_size_spinner_text"
        android:layout_height="?attr/ms_item_height_size"
        android:textColor="@color/config_color_edittext_textcolor"
        android:background="@drawable/ms_background_edittext"
        android:paddingLeft="?attr/ms_padding_left_size"
        android:paddingEnd="30dp"/>

    <ImageView
        android:id="@+id/edit_spinner_arrow"
        android:layout_gravity="end|center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:src="@drawable/ic_arrow_down_black"
        android:tint="@color/config_color_black" />
</FrameLayout>