<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="@color/config_color_light_blue" />
            <corners
                android:radius="?attr/config_size_edittext_radius" />

            <solid android:color="@color/config_color_white"/>

        </shape>
    </item>
    <item>
        <bitmap
            android:gravity="right"
            android:src="@drawable/ic_arrow_down_black"
            android:tint="@color/config_color_black" />

    </item>

</layer-list>